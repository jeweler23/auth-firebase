{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "jsx": "preserve",
    "jsxImportSource": "vue",

    "strict": true,
    "noImplicitThis": true,
    "useDefineForClassFields": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,

    "noEmit": true,

    "verbatimModuleSyntax": true
  },
  "include": [
    "src",
    "env.d.ts",
    "vue-shims.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "references": []
}